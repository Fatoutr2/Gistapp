@model DashboardSuiviProjets.Models.Utilisateur

@{
    ViewData["Title"] = "Supprimer l'Utilisateur";
}

<h2>Supprimer l'Utilisateur</h2>

<h3>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</h3>

<div>
    <h4>@Model.Nom</h4>
    <p><strong>Email :</strong> @Model.Email</p>
    <p><strong>Rôle :</strong> @Model.Role</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
