@model DashboardSuiviProjets.Models.Utilisateur

@{
    ViewData["Title"] = "Détails de l'Utilisateur";
}

<h2>Détails de l'Utilisateur</h2>

<div>
    <h4>@Model.Nom</h4>
    <p><strong>Email :</strong> @Model.Email</p>
    <p><strong>Rôle :</strong> @Model.Role</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
<a asp-action="Index" class="btn btn-secondary">Retour</a>
