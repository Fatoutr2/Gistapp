@model DashboardSuiviProjets.Models.Utilisateur

@{
    ViewData["Title"] = "Modifier l'Utilisateur";
}

<h2>Modifier l'Utilisateur</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Role"></label>
        <input asp-for="Role" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
