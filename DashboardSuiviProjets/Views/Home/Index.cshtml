@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
    }

    .header {
        background: linear-gradient(to right, #ffff, #4b4b4b);
        padding: 20px;
        color: navajowhite;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .logo {
        font-size: 22px;
        font-weight: bold;
    }

    .top-menu {
        display: flex;
        gap: 15px;
    }

    .btn {
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 25px;
        color: white;
        font-weight: bold;
        transition: 0.3s ease-in-out;
    }

    .btn-primary {
        background: #2575fc;
    }

        .btn-primary:hover {
            background: #2f4f4f;
        }

    .btn-success {
        background: #2faf50;
    }

        .btn-success:hover {
            background: #388e3c;
        }

    .main-content {
        padding: 20px;
        background-image: url('@Url.Content("~/assets/img/imageproo.jpg")');
        background-size: cover;
        min-height: 100vh;
        color: white;
    }

    h2 {
        color: #fff;
    }

    .dashboard-banner {
        background: rgba(0, 0, 0, 0.6);
        padding: 60px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .dashboard-banner h2 {
            font-size: 36px;
        }

        .dashboard-banner p {
            color: black;
        }
</style>

<section id="container">
    <header class="header black-bg">
        <a href="/" class="logo"><b>GISPROJECT</b></a>
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li><a class="btn btn-primary" href="/Account/Login">Connexion</a></li>
                <li><a class="btn btn-success" href="/Account/Register">Inscription</a></li>
            </ul>
        </div>
    </header>

    <section id="main-content">
        <section class="wrapper">
            <div class="page-hero bg-image overlay-dark" style="background-image: url('images/online_exam.jpg');">
                <div class="dashboard-banner">
                    <h2>Bienvenue sur Gisproject</h2>
                    <p>Suivez, gerez et organisez efficacement vos projets.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-9 main-chart">
                    <h2>Your Projects</h2>
                    <p>Gérez vos projets en cours et à venir en toute simplicité.</p>
                </div>
            </div>
        </section>
    </section>
</section>
