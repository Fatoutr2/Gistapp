@model IEnumerable<DashboardSuiviProjets.Models.Projet>

@{
    ViewData["Title"] = "Liste des Projets";
}

<h2>Liste des Projets</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer un nouveau projet</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projet in Model)
        {
            <tr>
                <td>@projet.Nom</td>
                <td>@projet.Description</td>
                <td>@projet.DateDebut?.ToString("dd/MM/yyyy") ?? "Non définie"</td>
                <td>@projet.DateFin?.ToString("dd/MM/yyyy") ?? "Non définie"</td>
                <td>@projet.Statut</td>
                <td>@(projet.EstTermine ? "Oui" : "Non")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@projet.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Details" asp-route-id="@projet.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Delete" asp-route-id="@projet.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
