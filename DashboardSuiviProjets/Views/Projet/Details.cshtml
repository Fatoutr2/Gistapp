@model DashboardSuiviProjets.Models.Projet

@{
    ViewData["Title"] = "Détails du Projet";
}

<h2>Détails du Projet</h2>

<div>
    <h4>@Model.Nom</h4>
    <p>@Model.Description</p>
    <p><strong>Date de début :</strong> @Model.DateDebut?.ToShortDateString()</p>
    <p><strong>Date de fin :</strong> @(Model.DateFin?.ToShortDateString() ?? "N/A")</p>
    <p><strong>Statut :</strong> @(Model.EstTermine ? "Terminé" : "En cours")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
<a asp-action="Index" class="btn btn-secondary">Retour</a>
