@model DashboardSuiviProjets.Models.Projet

@{
    ViewData["Title"] = "Modifier un Projet";
}

<h2>Modifier un Projet</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DateDebut"></label>
        <input asp-for="DateDebut" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="DateFin"></label>
        <input asp-for="DateFin" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EstTermine"></label>
        <input asp-for="EstTermine" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
