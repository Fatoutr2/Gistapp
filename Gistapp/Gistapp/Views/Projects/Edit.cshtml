@model Gistapp.Models.Projects

@{
    ViewData["Title"] = "Modifier le Projet";
}

<h2>Modifier le Projet</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProjectId" />

    <div class="form-group">
        <label asp-for="Name">Nom du projet</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Date de début</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Date de fin</label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Progress">Progression (%)</label>
        <input asp-for="Progress" type="number" class="form-control" min="0" max="100" required />
    </div>

    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
