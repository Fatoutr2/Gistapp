@model Gistapp.Models.Tasks

@{
    ViewData["Title"] = "Modifier la Tâche";
}

<h2>Modifier la Tâche</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group">
        <label asp-for="Title">Titre</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Date d'échéance</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsCompleted">Terminée ?</label>
        <input asp-for="IsCompleted" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
