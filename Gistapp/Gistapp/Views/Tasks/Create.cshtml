@model Gistapp.Models.Tasks

@{
    ViewData["Title"] = "Créer une Tâche";
}

<h2>Créer une Tâche</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title">Titre</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Date d'échéance</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsCompleted">Terminée ?</label>
        <input asp-for="IsCompleted" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
