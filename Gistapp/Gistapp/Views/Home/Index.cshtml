    ViewData["Title"] = "Home Page";
}
<header>
<nav>
    <div class="navbar">
        <div class="logo">
            <a>
                Gistapp
            </a>
        </div>
        <div class="navigation">
            <div class="menu-list">
                <ul>
                    <li><a href="menu 1">Accueil</a></li>
                    <li><a href="menu 3">About us</a></li>
                </ul>
            </div>

            <div class="inscription">
                    <a asp-controller="Home" asp-action="Inscription"> Inscription</a>
            </div>
            <div class="connexion">
                    <a asp-controller="Home" asp-action="Authentification"> Connexion</a>
            </div>
        </div>
