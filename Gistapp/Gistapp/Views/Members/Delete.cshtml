@model Gistapp.Models.Members

@{
    ViewData["Title"] = "Supprimer un Membre";
}

<h2>Supprimer le Membre</h2>

<div class="alert alert-danger">
    <p>Êtes-vous sûr de vouloir supprimer ce membre ?</p>
    <ul>
        <li><strong>Nom :</strong> @Model.FullName</li>
        <li><strong>Email :</strong> @Model.Email</li>
    </ul>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MemberId" />
    <button type="submit" class="btn btn-danger">Oui, Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>