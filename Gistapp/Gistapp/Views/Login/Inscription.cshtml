@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Inscription</title>

    <!-- Lien vers Font Awesome et Google Fonts pour améliorer l'esthétique -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600&display=swap" rel="stylesheet">
</head>
<header>

    <nav>
        <div class="navbar">
            <div class="logo">
                <a>
                    Gistapp
                </a>
            </div>
            <div class="navigation">
                <div class="menu-list">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                        <li><a asp-controller="Home" asp-action="About">About us</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="register-wrapper">
        <div class="register-container">
            <div class="header-bar">
                <h3><i class="fas fa-user-plus"></i> Inscription</h3>
            </div>
            <form class="form-signup" method="POST" action="/register">
                <div class="form-group">
                    <label for="first-name">Prénom</label>
                    <input type="text" class="form-control" name="first_name" id="first-name" placeholder="Votre prénom" required />
                </div>
                <div class="form-group">
                    <label for="last-name">Nom</label>
                    <input type="text" class="form-control" name="last_name" id="last-name" placeholder="Votre nom" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Votre email" required />
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Votre mot de passe" required />
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirmez le mot de passe</label>
                    <input type="password" class="form-control" name="confirm_password" id="confirm-password" placeholder="Confirmez votre mot de passe" required />
                </div>
                <button class="btn btn-register" type="submit">
                    <i class="fas fa-user-check"></i> S'inscrire
                </button>
                <div class="login-link">
                    <a asp-controller="Home" asp-action="Authentification">Déjà un compte ? Connectez-vous</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
