@model Gistapp.Models.Users

@{
    ViewData["Title"] = "Détails de l'Utilisateur";
}

<h2>Détails de l'Utilisateur</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Username</h4>
        <p class="card-text"><strong>Email :</strong> @Model.Email</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Modifier</a>
<a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
